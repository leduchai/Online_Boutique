@model List<Online_Boutique.Models.MyModels.SanPham>

<div class="other-products">
    <div class="container">
        <h3 class="like text-center">Sản Phẩm Được Yêu Thích</h3>
        <ul id="flexiselDemo3">
            @{
                foreach (var item in Model)
                {
                    <li>
                        <a href="@Url.Action("ChiTietSP","MyProducts", new {@masp= @item.masp })"><img src="@Url.Content("~/HinhAnh/nu/"+@item.anhsp)" class="img-responsive anhsp" alt="" /></a>
                        <div class="product liked-product simpleCart_shelfItem">
                            <a class="like_name" href="@Url.Action("ChiTietSP","MyProducts", new {@masp= @item.masp })">@item.tensp</a>
                            <p><a class="item_add" href="@Url.Action("ThemGioHang","MyCart",new {@masp= @item.masp, @url= Request.Url.ToString() })"><i></i> <span class="item_price">@item.giabansp VND</span></a></p>
                        </div>
                    </li>
                }
            }
          
           
        </ul>
        <script type="text/javascript">
					 $(window).load(function() {
						$("#flexiselDemo3").flexisel({
							visibleItems: 4,
							animationSpeed: 1000,
							autoPlay: true,
							autoPlaySpeed: 3000,
							pauseOnHover: true,
							enableResponsiveBreakpoints: true,
					    	responsiveBreakpoints: {
					    		portrait: {
					    			changePoint:480,
					    			visibleItems: 1
					    		},
					    		landscape: {
					    			changePoint:640,
					    			visibleItems: 2
					    		},
					    		tablet: {
					    			changePoint:768,
					    			visibleItems: 3
					    		}
					    	}
					    });

					});
        </script>
        <script type="text/javascript" src="~/Content/web/js/jquery.flexisel.js"></script>
    </div>
</div>